@model IEnumerable<MVCProject.Models.Supplier>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<string> roles = (List<string>)ViewData["AccessList"];
}
<section>
    <h2>
        Danh mục nhà cung cấp
    </h2>
    <div class="arrange-button">
        @if (roles.Contains("3"))
        {
            <a href="../Supplier/Create" class="btn btn-info" id="modaltrigger" rel="leanModal">Thêm mới</a>
        }
    </div>
</section>
<section class="content">
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr style="background-color: #3c8dbc; color:#fff">
                    <th>Tên</th>
                    <th>Địa chỉ</th>
                    <th>Điện thoại</th>
                    <th>MST</th>
                    <th>Ngân hàng</th>
                    <th>STK</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>
                            @if (roles.Contains("4"))
                            {
                                @Html.ActionLink(item.Name, "Edit", new { id = item.ID })
                            }
                            else
                            {
                                @item.Name
                            }
                        </th>
                        <td>
                            @item.Address
                        </td>
                        <td>
                            @item.Phone
                        </td>
                        <td>
                            @item.TaxCode
                        </td>
                        <td>
                            @item.NameBank
                        </td>
                        <td>
                            @item.AccountBank
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
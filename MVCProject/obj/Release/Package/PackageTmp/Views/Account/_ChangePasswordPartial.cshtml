@using Microsoft.AspNet.Identity
@model MVCProject.Models.ManageUserViewModel


<p>Tài khoản đăng nhập <strong>@User.Identity.GetUserName()</strong>.</p>

<form method="post" action="/Account/Manage" role="form">
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    <div class="arrange-div form-group col-md-12">
        <label class="text-label col-md-2" for="OldPassword">Mật Khẩu Hiện Tại</label>
        <div class="col-md-6">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="arrange-div form-group col-md-12">
        <label class="text-label col-md-2" for="NewPassword">Mật Khẩu Mới</label>
        <div class="col-md-6">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="arrange-div form-group col-md-12">
        <label class="text-label col-md-2" for="ConfirmPassword">Nhập Lại Mật Khẩu Mởi</label>
        <div class="col-md-6">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div style="text-align:center" class="col-md-12">
        <input type="submit" value="Lưu" class="btn btn-info" />
    </div>
    <div class="clearfix"></div>
</form>


@model MVCProject.Models.ProductCode

@{
    ViewBag.Title = "Cấu hình";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form action="/ProductCode/Create" method="post" enctype="multipart/form-data">
    <section class="content-header">
        <h2>Cấu Hình</h2>
        <h4>Mã sản phẩm</h4>
    </section>
    <section class="content">
        <div class='arrage-popup'>
            @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.CatCode)
                <div class="arrange-div form-group col-md-12">
                    <label class="text-label col-md-2" for="Group1">Group 1</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Group1, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Group1)
                    </div>
                </div>
                <div class="arrange-div form-group col-md-12">
                    <label class="text-label col-md-2" for="Group2">Group 2</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.Group2, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Group2)
                    </div>
                </div>
                <div class="arrange-div form-group col-md-12">
                    <label class="text-label col-md-2" for="CatID">Dùng mã danh mục</label>
                    <div class="col-md-6">
                        @Html.EditorFor(model => model.CatID, new { @class = "form-control" })
                    </div>
                </div>
                <div class="arrange-div form-group col-md-12">
                    <label class="text-label col-md-2" for="ScrollNumber">Số tự động</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model => model.ScrollNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ScrollNumber)
                    </div>
                </div>
                @Html.HiddenFor(model => model.Active)
                @Html.HiddenFor(model => model.CatCode)
                @Html.HiddenFor(model => model.ID)
                <div class="arrange-div form-group col-md-12">
                    <label class="text-label col-md-2" for="ScrollNumber">Kết quả</label>
                    <div class="col-md-6">
                        <input type="text" id="display" name="display" class="form-control" />
                    </div>
                </div>
                <div style="text-align:center" class="col-md-12">
                    <input type="submit" value="Lưu Lại" class="btn btn-info" />
                    <a href="~/Product/Index" class="btn btn-info">Về danh sách</a>
                </div>
                <div class="clearfix"></div>
                </div>
        </section>
</form>

    <div>
        @{
            string backType = Request.QueryString["Code"];
            string com = "Product";
            if (backType == "KM")
            { com = "Promotion"; }
            else if (backType == "OC")
            { com = "Order"; }
        }
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

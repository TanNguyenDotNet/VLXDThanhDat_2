@model MVCProject.Models.Supplier

@{
    ViewBag.Title = "Thêm mới nhà cung cấp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form action="/Supplier/Create" method="post" enctype="multipart/form-data">
    <section class="content-header">
        <h2>@ViewBag.Title</h2>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    </section>
    <section class="content">
        <div class='arrage-popup'>
            <div class="arrange-div form-group col-md-12">
                <label class="text-label col-md-2" for="Title">Tên:</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @maxlength = "50" })
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
            <div class="arrange-div form-group col-md-12">
                <label class="text-label col-md-2" for="Address">Địa chỉ:</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Address, new { @class = "form-control", @maxlength = "128" })
                    @Html.ValidationMessageFor(model => model.Address)
                </div>
            </div>
            <div class="arrange-div form-group col-md-12">
                <label class="text-label col-md-2" for="Phone">Điện thoại:</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Phone, new { @class = "form-control", @maxlength = "20" })
                    @Html.ValidationMessageFor(model => model.Phone)
                </div>
            </div>
            <div class="arrange-div form-group col-md-12">
                <label class="text-label col-md-2" for="MST">Mã số thuế</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.TaxCode, new { @class = "form-control", @maxlength = "20" })
                    @Html.ValidationMessageFor(model => model.TaxCode)
                </div>
            </div>
            <div class="arrange-div form-group col-md-12">
                <label class="text-label col-md-2" for="NameBank">Tên ngân hàng</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.NameBank, new { @class = "form-control", @maxlength = "128" })
                    @Html.ValidationMessageFor(model => model.NameBank)
                </div>
            </div>
            <div class="arrange-div form-group col-md-12">
                <label class="text-label col-md-2" for="AccBank">Số tài khoản</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.AccountBank, new { @class = "form-control", @maxlength = "50" })
                    @Html.ValidationMessageFor(model => model.AccountBank)
                </div>
            </div>
            <div class="arrange-div form-group col-md-12">
                <label class="text-label col-md-2" for="Show">Hiển thị</label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.IsShow)
                    @Html.ValidationMessageFor(model => model.IsShow)
                </div>
            </div>
            <div style="text-align:center" class="col-md-12">
                <input type="submit" value="Lưu Lại" class="btn btn-info" />
                <a href="~/Supplier/Index" class="btn btn-info">Về danh sách</a>
            </div>
            <div class="clearfix"></div>
        </div>
    </section>
</form>
@model IEnumerable<MVCProject.Models.ProductName>

@{
    ViewBag.Title = "Danh sách tên sản phẩm theo vùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<string> roles = (List<string>)ViewData["AccessList"];
    Dictionary<int, string> cities = (Dictionary<int, string>)ViewData["CityNameList"];
}

<h2>@ViewBag.Title</h2>
@if(roles.Contains("1")){
<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
}
<table class="table">
    <tr>
        <th>
            Mã
        </th>
        <th>
            Tên
        </th>
        <th>
            Vùng
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @if (cities.Keys.Contains(int.Parse(item.LocationID.ToString()))) { 
                @cities[int.Parse(item.LocationID.ToString())]
            }
        </td>
    </tr>
}

</table>

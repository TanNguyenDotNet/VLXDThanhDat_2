@model MVCProject.Models.Promotion

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<form action="/Product/Create" method="post" enctype="multipart/form-data">
    <section class="content-header">
        <h2>Thêm mới</h2>
        <h4>Khuyến mãi</h4>
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
    </section>
    <section class="content">
        <div class='arrage-popup'>
            <div class="arrange-div form-group col-md-12">
                <label class="text-label col-md-2" for="ProductID">Sản phẩm</label>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.ProductID, (IEnumerable<SelectListItem>)ViewBag.ProductList,
                        "Chọn sản phẩm", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ProductID)
                </div>
            </div>

            <div class="arrange-div form-group col-md-12">
                <label class="text-label col-md-2" for="Title">Tên khuyến mãi:</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Title)
                </div>
            </div>

            <div class="arrange-div form-group col-md-12">
                <label class="text-label col-md-2" for="PromotionCode">Mã khuyến mãi:</label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.PromotionCode, new { @class = "form-control" })
                </div>
            </div>
            <div class="arrange-div form-group col-md-12">
                <label class="text-label col-md-2" for="StartDate">
                    Ngày áp dụng:
                </label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="arrange-div form-group col-md-12">
                <label class="text-label col-md-2" for="EndDate">
                    Ngày kết thúc:
                </label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>
            <div class="arrange-div form-group col-md-12">
                <label class="text-label col-md-2" for="PromotionTypeID">Hình thức khuyến mãi:</label>
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.PromotionTypeID, (IEnumerable<SelectListItem>)ViewBag.PromotionTypeList,
                     "Chọn hình thức khuyến mãi", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PromotionTypeID)
                </div>
            </div>

            <div class="arrange-div form-group col-md-12">
                <label class="text-label col-md-2" for="PromotionValue">
                    Giá trị khuyến mãi:
                </label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.PromotionValue, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PromotionValue)
                </div>
            </div>
            <div class="arrange-div form-group col-md-12">
                @Html.LabelFor(model => model.LocationID, new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.LocationID, (IEnumerable<SelectListItem>)ViewBag.LocationList,
                 "Chọn tỉnh/thành phố", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LocationID)
                </div>
            </div>

            
            <div class="arrange-div form-group col-md-12">
                <label class="text-label col-md-2" for="Active">
                    Kích hoạt:
                </label>
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Active)
                    @Html.ValidationMessageFor(model => model.Active)
                </div>
            </div>
            <div style="text-align:center" class="col-md-12">
                    <input type="submit" value="Lưu Lại" class="btn btn-info" />
                    <a href="~/Product/Index" class="btn btn-info">Về danh sách</a>
                </div>
            <div class="clearfix"></div>
        </div>
        <script>
        $('#StartDate').datetimepicker({
            value: '@DateTime.Now.ToString()', step: 1
        });
        $('#EndDate').datetimepicker({
            value: '@DateTime.Now.ToString()', step: 2
        });
        </script>
    </section>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



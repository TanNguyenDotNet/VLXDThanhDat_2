@model MVCProject.Models.PromotionType

@{
    ViewBag.Title = "Chỉnh sửa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh sửa</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Hình thức khuyến mãi</h4>
        <hr />
        @Html.ValidationSummary(true)
        <div class="form-group">
            <span class="control-label col-md-2">Tiêu đề:</span>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ProTypeName, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProTypeName)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Phương thức tính:</span>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.AddType, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AddType)
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">Giá trị:</span>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ExRate, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ExRate)
            </div>
        </div>

        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu Lại" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Về danh sách", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
